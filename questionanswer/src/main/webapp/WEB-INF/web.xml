<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>questionanswer</display-name>
    <servlet>
    	<description>
    	</description>
    	<display-name>QuestionAnswerServlet</display-name>
    	<servlet-name>QuestionAnswerServlet</servlet-name>
    	<servlet-class>com.smartglossa.questionanswer.QuestionAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>QuestionAnswerServlet</servlet-name>
    	<url-pattern>/question</url-pattern>
    </servlet-mapping>
    <servlet>
    	<description>
    	</description>
    	<display-name>userServlet</display-name>
    	<servlet-name>userServlet</servlet-name>
    	<servlet-class>com.smartglossa.questionanswer.userServlet</servlet-class>
    </servlet>
   
    <servlet>
    	<description>
    	</description>
    	<display-name>questionAnswerServlet</display-name>
    	<servlet-name>questionAnswerServlet</servlet-name>
    	<servlet-class>com.smartglossa.answer.questionAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>userServlet</servlet-name>
    	<url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>questionAnswer</servlet-name>
    	<url-pattern>/questionAnswer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>questionAnswerServlet</servlet-name>
    	<url-pattern>/qa</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        </welcome-file-list>
    </web-app>
